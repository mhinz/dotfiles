#!/usr/bin/env bash

set -e

dir="${ME}/github/elixir-lang/elixir"

if [[ ! -d $dir ]]; then
    mkdir -p "${ME}/github/elixir-lang"
    git clone https://github.com/elixir-lang/elixir "$dir"
fi

cd "$dir"

if [[ $1 != -f ]]; then
    git pull | grep 'Already up[ -]to[ -]date.' && exit 1
fi

make clean
make
