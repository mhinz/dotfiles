#!/usr/bin/env bash

set -e

dir="${ME}/github/erlang/otp"
prefix="${HOME}/local/erlang"

flags=(
    --prefix=${prefix}
    --with-ssl=/usr/local/opt/openssl
    --without-javac
)

cd "$dir"

if [[ $1 != -f ]]; then
    git pull | grep 'Already up[ -]to[ -]date.' && exit 1
fi

export LANG=C

if [[ ! -f ./configure ]]; then
    ./otp_build autoconf
    ./configure "${flags[@]}"
fi

make install
